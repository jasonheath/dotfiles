# if chezmoi is available on the path update or say its unavailable
if command -v chezmoi &> /dev/null; then
  chezmoi update # to pull managed files update asap
else
  echo "chezmoi unavailable"
fi

# Load login settings and environment variables
if [[ -f $HOME/.profile ]]; then
  source "$HOME/.profile"
fi


# Load interactive settings
if [[ -f $HOME/.bashrc ]]; then
  source "$HOME/.bashrc"
fi

