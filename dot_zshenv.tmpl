# '.zshenv' is sourced on all invocations of the shell, unless the -f
# option is set. It should contain commands to set the command search 
# path, plus other important environment variables. '.zshenv' should not
# contain commands that produce output or assume the shell is attached
# to a tty.
#
# '.zshenv' is 1/4 files that are executed

export LANG=en_US.UTF-8

# Preferred editor for local and remote sessions
if [[ -n $SSH_CONNECTION ]]; then
  export EDITOR='vim'
else
  export EDITOR='vim'
fi

# ssh
# export SSH_KEY_PATH="~/.ssh/rsa_id"


# export MANPATH="/usr/local/man:$MANPATH"

. "$HOME/.cargo/env"

{{- if eq .chezmoi.os "darwin" }}


#export POSTGRES_PATH='/Applications/Postgres.app/Contents/Versions/latest/bin'
#export GOPATH='/Users/jasonheath/Development/go'

# /usr/local/bin:/usr/bin:/bin:/usr/sbin:/sbin:/Library/Apple/usr/bin:/Users/jaheath/.cargo/bin
export HOMBREW_PATH="/usr/local/bin:/usr/local/sbin"
export MACVIM_PATH="/Applications/MacVim.app/Contents/bin"
export HOME_BIN_PATH="$HOME/bin"

export PATH="$HOME_BIN_PATH:$MACVIM_PATH:$HOMBREW_PATH:$PATH"

{{- else if eq .chezmoi.os "linux" }}

export PATH="$HOME/bin:$PATH"

{{- end }}



